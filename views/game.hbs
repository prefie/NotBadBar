<div class="wrapper">
    <div class="cupboard-wrapper">
        <div class="first-cupboard">
            <div class="first-shelf1">
                <div class="bottle Absinthe"></div>
                <div class="bottle Aperol"></div>
                <div class="bottle Blue-Curasao"></div>
                <div class="bottle Bombay-Sapphire"></div>
                <div class="bottle Campari"></div>
            </div>
            <div class="second-shelf1">
                <div class="decoration cherries"></div>
                <div class="decoration limes"></div>
                <div class="decoration olives"></div>
                <div class="decoration strawberries"></div>
            </div>
        </div>
        <div class="second-cupboard">
            <div class="first-shelf2">
                <!-- Items -->
            </div>
            <div class="second-shelf2">
                <div class="glass stemmed-glass short-glass"></div>
                <div class="glass stemmed-glass tall-glass"></div>
                <div class="glass stemmed-glass round-glass"></div>
            </div>
            <div class="third-shelf2">
                <div class="glass water-glass"></div>
            </div>
        </div>
    </div>

    <div class="table-wrapper">
        <!--Several items-->
        <!--        <round-glass></round-glass>-->
        <!--        <short-glass></short-glass>-->
        <!--        <tall-glass></tall-glass>-->
        <!--        <water-glass></water-glass>-->
        <div class="trash">
            <img class="trash-can" src="../visualisation/images/TrashCan.svg" alt="trash can"/>
        </div>
        <div class="table-surface">
            <div class="cocktails-in-progress">
                <div class="first-glass"></div>
                <div class="second-glass"></div>
                <div class="third-glass"></div>
                <div class="fourth-glass"></div>
            </div>
        </div>
    </div>

    <div class="bottom-nav-bar">
        <div class="cashbox">
            <img class="coin-image" src='visualisation/images/Coin.svg' alt="Coin">
            <div class="coin-value">100</div>
            <div class="stars">
                <div class="first-star">&#9733;</div>
                <div class="second-star">&#9733;</div>
                <div class="third-star">&#9733;</div>
            </div>
        </div>

        <div class="result-cocktails">
            <div class="result-cocktail">
                <div class="progress-bar">
                    <div id="first-progress-bar" class="moving-progress-bar"></div>
                </div>
                <div class="cocktail-image"></div>
            </div>
            <div class="result-cocktail">
                <div class="progress-bar">
                    <div id="second-progress-bar" class="moving-progress-bar"></div>
                </div>
                <div class="cocktail-image"></div>
            </div>
            <div class="result-cocktail">
                <div class="progress-bar">
                    <div id="third-progress-bar" class="moving-progress-bar"></div>
                </div>
                <div class="cocktail-image"></div>
            </div>
            <div class="result-cocktail">
                <div class="progress-bar">
                    <div id="fourth-progress-bar" class="moving-progress-bar"></div>
                </div>
                <div class="cocktail-image"></div>
            </div>
        </div>

        <div class="time-table">
            <img class="clock-image" src="visualisation/images/Clock.svg" alt="Clock">
            <div class="time-left">{{barTime}}</div>
        </div>
    </div>
</div>